{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output/Trie.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Indra-Air-Traffic-Programming-Practical-Evaluation"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
